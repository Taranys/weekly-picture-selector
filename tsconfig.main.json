{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "dist/main",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/main/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "src/renderer"]
}
